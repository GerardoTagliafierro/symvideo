{% extends 'base.html.twig' %}
{% block title %} SymVideo {% endblock %}

{% block body %}
<div class="container">
  {{
    render(controller(
      'App\\Controller\\SearchController::searchBar'
    ))
  }}
  {% for video in videos|reverse %}
    <div class="row mb-5">
        <div class="col-12 col-md-6">
            <video class="col-12" >
            <source src="{{ asset('uploads/video/' ~ video.filename) }}" type="video/mp4">
            Your browser does not support HTML5 video.
            </video>
        </div>
        <div class="col-12 col-md-6 ">
            <h2 class="mb-3">{{ video.title }}</h2>
            <p>{{ video.description }}</p>
            <a class="btn btn-primary btn-dark " href="./video/{{video.id}}">Show</a>
        </div>
    </div>
  {% endfor %}
</div>
{% endblock %}
