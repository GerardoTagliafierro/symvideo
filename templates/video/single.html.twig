{% extends 'base.html.twig' %}
{% block title %} SymVideo {{video.title}} {% endblock %}

{% block body %}
<div class="container">
  <div class="row">
    <video class="col-12 my-3" controls>
    <source src="{{ asset('uploads/video/' ~ video.filename) }}" type="video/mp4">
    Your browser does not support HTML5 video.
    </video>
    <div class="col-12">
      <h1>{{video.title}}</h1>
      <p>{{video.description}}</p>
      <a href="../" class="btn btn-dark">back</a>
    </div>
  </div>
</div>
{% endblock %}
