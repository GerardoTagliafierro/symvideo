{% extends 'base.html.twig' %}

{% block title %}Hello SecurityController!{% endblock %}

{% block body %}
<style>
   
</style>

<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-5">Login</h1>
            {% if error %}
                <span class="text-danger">{{ error.messageKey }}</span>
            {% endif %}
            <form action="{{ path('login')}}" method="POST">
                <label>Username</label>
                <input class="form-control mb-3" type="text" name="_username" value="{{last_username}}" placeholder="Username here ...">
                <label>Password</label>
                <input class="form-control mb-3" type="password" name="_password" placeholder="Password here ...">

                <button type="submit" class="btn btn-primary">Login</button>
            </form>
        </div>
    </div>
</div>
{% endblock %}
