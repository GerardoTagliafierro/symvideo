{% extends 'base.html.twig' %}

{% block title %}Hello SecurityController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Login page</h1>
    {% if error %}
        <span class="text-danger">{{ error.messageKey }}</span>
    {% endif %}
    <form action="{{ path('login')}}" method="POST">

        <input type="text" name="_username" value="{{last_username}}" placeholder="Username here ...">

        <input type="password" name="_password" placeholder="Password here ...">

        <button type="submit">Login</button>
    </form>
</div>
{% endblock %}
